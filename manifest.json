{
  "manifest_version": 3,
  "name": "Remove Target Div Classes",
  "version": "1.0",
  "description": "Finds a specific div and updates its class.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "trigger-update": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Update classes on w-[100cqw] elements"
    }
  }
}
